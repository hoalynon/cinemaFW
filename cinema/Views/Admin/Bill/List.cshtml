
@{
    <table class="table">
        <thead>
            <tr>
                <th style="width: 100px">ID Hóa Đơn</th>
                <th>Tên Khách Hàng</th>
                <th>Ngày lập</th>
                <th>Số Vé</th>
                <th>Tổng Tiền</th>
                <th style="width: 100px"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var bill in (ViewData["Bills"] as IEnumerable<Bill>))
            {
                <tr>
                    <td> @bill.bi_id </td>
                    <td>
                        @foreach (var customer in (ViewData["Customers"] as IEnumerable<Customer>))
                        {
                            @if(customer.cus_id == bill.cus_id)
                            {
                                @:@customer.cus_name
                            }
                        }
                    </td>
                    <td> @bill.bi_date </td>
                    <td> @bill.tk_count </td>
                    <td> @bill.bi_value </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Bill" asp-action="Detail" asp-route-id="@bill.bi_id">
                            <i class="fas fa-eye"></i>
                        </a>

                    @*
                        <a class="btn btn-primary btn-sm" href="/admin/bills/detail/' . $bill->bi_id . '">
                            <i class="fas fa-eye"></i>
                        </a>
                    *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center">

    </div>
}

